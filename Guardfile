# A sample Guardfile
# More info at https://github.com/guard/guard#readme

# use gem 'guard-livereload'
guard 'livereload' do
  watch(%r{images/.+\.(png|jpg)})
  watch(%r{protected/views.+\.(php|html)})
  watch(%r{css/.+\.(css)})
  watch(%r{js/.+\.(js)})
end

